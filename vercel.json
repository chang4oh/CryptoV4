{
  "version": 2,
  "buildCommand": "cd app/frontend && npm run vercel-build",
  "outputDirectory": "app/frontend/dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://cryptov4-api.vercel.app/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*).(js|css|json|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;" }
      ]
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://cryptov4-api.vercel.app",
    "VITE_USE_MOCK_DATA": "true",
    "VITE_ENABLE_ANALYTICS": "true",
    "VITE_ENABLE_SENTRY": "true"
  }
} 